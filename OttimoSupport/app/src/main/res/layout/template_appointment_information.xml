<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:background="@drawable/list_view_row_bg"
    android:orientation="horizontal">
    <CheckBox
        android:layout_width="wrap_content"
        android:id="@+id/chkAppointment"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0">
            <TextView
                style="@style/txtPersonInformationName"
                android:layout_width="0dp"
                android:layout_weight=".70"
                android:id="@+id/txtAppointmentInformationPatientName"
                android:text="@string/Sample" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".30"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="Dikirim : "/>
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:textColor="#ff0400"
                android:id="@+id/txtAppointmentNoOfMessageSent"
                android:text="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0">
            <TextView
                style="@style/txtBase"
                android:layout_width="0dp"
                android:layout_weight=".75"
                android:id="@+id/txtAppointmentInformationParamedicName"
                android:text="@string/Sample"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="wrap_content"
                android:textColor="#26ff00"
                android:gravity="right"
                android:id="@+id/txtSMSLogStatus"
                android:text="1"/>
        </LinearLayout>
        <TextView
            style="@style/txtBase"
            android:id="@+id/txtAppointmentInformationVisitTypeName"
            android:text="@string/Sample"/>
    </LinearLayout>
</LinearLayout>