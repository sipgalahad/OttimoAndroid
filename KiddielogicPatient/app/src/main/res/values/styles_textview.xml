<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="txtBase" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14dp</item>     
    </style>
	<style name="txtMenuCaption">
        <item name="android:textSize">12dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item> 
    </style>
	<style name="txtPageIndex" parent="txtBase">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textStyle">bold</item>  
    </style>
	<style name="txtLabel" parent="txtBase">
        <item name="android:layout_width">80dp</item>
    </style>
	<style name="txtLabelInformation" parent="txtBase">
        <item name="android:layout_width">100dp</item>
    </style>
	<style name="txtHeader" parent="txtBase">
        <item name="android:textSize">24dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textStyle">bold</item>  
    </style>
    
	
	<style name="txtSampleContent" parent="txtBase">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
	
	<style name="txtPersonInformationName" parent="txtBase">
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>  
    </style>
    <style name="txtFooterListView" parent="txtBase">
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>